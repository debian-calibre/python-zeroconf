Subject: Use auto mode to avoid warning

This fix avoids some deprecation warnings from pytest-asyncio.
---
 setup.cfg | 1 +
 1 file changed, 1 insertion(+)

diff --git a/setup.cfg b/setup.cfg
index d4b4829..932495c 100644
--- a/setup.cfg
+++ b/setup.cfg
@@ -10,6 +10,7 @@ replace = __version__ = '{new_version}'
 
 [tool:pytest]
 testpaths = tests
+asyncio_mode = auto
 
 [flake8]
 show-source = 1
